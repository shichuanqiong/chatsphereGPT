{
  "rules": {
    ".write": false,

    "presence": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "auth.uid === $uid",
        ".validate": "newData.hasChildren(['state', 'lastSeen'])"
      }
    },

    "profiles": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.hasChildren(['uid']) && newData.child('uid').val() === $uid"
      }
    },

    "nicknameIndex": {
      ".write": "auth != null",
      "$slug": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".validate": "newData.child('uid').isString()"
      }
    },

    "profilesStats": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "roles": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": false
      }
    },

    "rooms": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$roomId": {
        ".read": "auth != null && (root.child('rooms').child($roomId).child('visibility').val() === 'public' || root.child('roomMembers').child($roomId).child(auth.uid).exists())",
        ".write": "auth != null && (newData.child('ownerId').val() === auth.uid || data.child('ownerId').val() === auth.uid)",
        ".validate": "newData.child('ownerId').exists()",
        "invites": {
          "$uid": {
            ".read": "auth != null",
            ".write": "auth != null"
          }
        },
        "bans": {
          "$uid": {
            ".read": "auth != null",
            ".write": "auth != null && root.child('rooms').child($roomId).child('ownerId').val() === auth.uid"
          }
        }
      }
    },

    "roomMembers": {
      ".write": "auth != null",
      "$roomId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && (auth.uid === $uid || root.child('rooms').child($roomId).child('ownerId').val() === auth.uid)"
        }
      }
    },

    "roomsMeta": {
      "$uid": {
        "$roomId": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },

    "messages": {
      ".read": false,
      ".write": "auth != null",
      "$roomId": {
        "$msgId": {
          ".read": "auth != null && root.child('roomMembers').child($roomId).child(auth.uid).exists()",
          ".write": "auth != null && newData.child('authorId').val() === auth.uid && newData.child('content').isString()",
          ".validate": "newData.hasChildren(['authorId', 'content', 'createdAt'])"
        }
      }
    },

    "dmMessages": {
      ".write": "auth != null",
      "$threadId": {
        ".read": "auth != null && $threadId.contains(auth.uid)",
        ".write": "auth != null && $threadId.contains(auth.uid)"
      }
    },

    "dmThreads": {
      ".write": "auth != null",
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null"
      }
    },

    "inbox": {
      ".write": "auth != null",
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null"
      }
    },

    "announcements": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('profiles').child(auth.uid).child('isAdmin').val() === true"
    },

    "friends": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        "$friendUid": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },

    "blocks": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        "$targetUid": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },

    "mutes": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        "$targetUid": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },

    "ads": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('profiles').child(auth.uid).child('isAdmin').val() === true"
    },

    "posts": {
      ".read": false,
      ".write": "auth != null",
      "$postId": {
        ".read": "auth != null && (root.child('posts').child($postId).child('visibility').val() === 'public' || root.child('posts').child($postId).child('authorId').val() === auth.uid)",
        ".write": "auth != null && newData.child('authorId').val() === auth.uid",
        ".validate": "newData.hasChildren(['authorId', 'content'])"
      }
    },

    "rateLimits": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "userBlocks": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        "global": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null && auth.uid === $uid",
          "$peerUid": {
            ".read": "auth != null && auth.uid === $uid",
            ".write": "auth != null && auth.uid === $uid"
          }
        },
        "rooms": {
          "$roomId": {
            ".read": "auth != null && auth.uid === $uid",
            ".write": "auth != null && auth.uid === $uid",
            "$peerUid": {
              ".read": "auth != null && auth.uid === $uid",
              ".write": "auth != null && auth.uid === $uid"
            }
          }
        }
      }
    }
  }
}
