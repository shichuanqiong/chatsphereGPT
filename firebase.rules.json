{
  "rules": {
    ".read": "auth != null",
    ".write": false,

    "presence": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth.uid === $uid",
        ".validate": "newData.hasChildren(['state', 'lastSeen'])"
      }
    },

    "profiles": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null && auth.uid === $uid",
        ".validate": "newData.hasChildren(['uid']) && newData.child('uid').val() === $uid"
      }
    },

    "profilesStats": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "roles": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": false
      }
    },

    "rooms": {
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null && (newData.child('ownerId').val() === auth.uid || data.child('ownerId').val() === auth.uid)",
        ".validate": "newData.child('ownerId').exists()"
      }
    },

    "roomMembers": {
      "$roomId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },

    "roomsMeta": {
      "$uid": {
        "$roomId": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },

    "messages": {
      "$roomId": {
        "$msgId": {
          ".read": "auth != null",
          ".write": "auth != null && newData.child('authorId').val() === auth.uid && newData.child('content').isString()",
          ".validate": "newData.hasChildren(['authorId', 'content', 'createdAt'])"
        }
      }
    },

    "directMessages": {
      "$chatId": {
        ".read": "auth != null && data.child('participants').hasChild(auth.uid)",
        ".write": "auth != null && newData.child('authorId').val() === auth.uid && newData.child('content').isString()"
      }
    },

    "dmThreads": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "inbox": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "announcements": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('profiles').child(auth.uid).child('isAdmin').val() === true"
    },

    "friends": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "blocks": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "mutes": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },

    "ads": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('profiles').child(auth.uid).child('isAdmin').val() === true"
    },

    "posts": {
      "$postId": {
        ".read": "auth != null",
        ".write": "auth != null && newData.child('authorId').val() === auth.uid",
        ".validate": "newData.hasChildren(['authorId', 'content'])"
      }
    },

    "rateLimits": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    }
  }
}
