{
  "rules": {
    ".read": false,
    ".write": false,
    
    "profiles": {
      ".read": true,
      "$uid": {
        ".write": "$uid === auth.uid",
        "bio": {
          ".validate": "newData.isString() && newData.val().length <= 500"
        }
      }
    },
    
    "presence": {
      ".read": true,
      "$uid": {
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    
    "nicknameIndex": {
      "$slug": {
        ".read": "auth != null",
        ".write": "auth != null && (!data.exists() || data.child('uid').val() === auth.uid)",
        ".validate": "newData.child('uid').val() === auth.uid"
      }
    },
    
    "roles": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    
    "rooms": {
      "$roomId": {
        ".read": "auth != null && (root.child('roles/'+auth.uid+'/admin').val() === true || ((root.child('rooms/'+$roomId+'/visibility').val() === 'public') || root.child('roomMembers/'+$roomId+'/'+auth.uid).exists()))",
        ".write": "auth != null",
        ".indexOn": ["createdAt", "visibility", "ownerId", "expiresAt"],
        "memberCount": {
          ".read": "auth != null",
          ".write": false
        }
      }
    },
    
    "roomMembers": {
      "$roomId": {
        "$uid": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid === $uid && (root.child('rooms').child($roomId).child('type').val() === 'official' || now < root.child('rooms').child($roomId).child('expiresAt').val())"
        }
      }
    },
    
    "messages": {
      "$roomId": {
        ".read": "auth != null",
        ".write": "auth != null",
        ".indexOn": ["createdAt", "authorId"],
        "$msgId": {
          ".validate": "newData.hasChildren(['createdAt','authorId','type','content'])",
          ".read": "auth != null && ((root.child('rooms/'+$roomId+'/visibility').val() === 'public' && !root.child('rooms/'+$roomId+'/bans/'+auth.uid).exists()) || root.child('roomMembers/'+$roomId+'/'+auth.uid).exists() || root.child('roles/'+auth.uid+'/admin').val() === true)",
          ".write": "auth != null && (root.child('rooms').child($roomId).child('type').val() === 'official' || now < root.child('rooms').child($roomId).child('expiresAt').val()) && root.child('roomMembers/'+$roomId+'/'+auth.uid).exists() && !root.child('rooms/'+$roomId+'/bans/'+auth.uid).exists() && newData.child('authorId').val() === auth.uid && (newData.child('type').val() === 'text' || newData.child('type').val() === 'gif') && newData.child('content').isString()"
        }
      }
    },
    
    "profilesStats": {
      "$uid": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    },
    
    "dmMessages": {
      "$threadId": {
        ".read": "auth != null && root.child('dmThreads').child(auth.uid).child($threadId).exists()",
        ".write": "auth != null && newData.child('authorId').val() === auth.uid",
        ".indexOn": ["createdAt", "authorId"],
        "$msgId": {
          ".read": "auth != null && root.child('dmThreads').child(auth.uid).child($threadId).exists()",
          ".write": "auth != null && newData.child('authorId').val() === auth.uid"
        }
      }
    },
    
    "dmThreads": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        "$threadId": {
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },
    
    "roomsMeta": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    
    "blocks": {
      "$uid": {
        "$targetUid": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },
    
    "userBlocks": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    
    "friends": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid"
      }
    },
    
    "inbox": {
      "$uid": {
        ".read": "auth != null && auth.uid === $uid",
        ".write": "auth != null && auth.uid === $uid",
        ".indexOn": ["ts", "unread", "type"],
        "$msgId": {
          ".read": "auth != null && auth.uid === $uid",
          ".write": "auth != null && auth.uid === $uid"
        }
      }
    },
    
    "rateLimits": {
      "$roomId": {
        "$uid": {
          ".read": "auth != null && auth.uid == $uid",
          ".write": "auth != null && auth.uid == $uid",
          "lastSent": {}
        }
      }
    },
    
    "posts": {
      ".read": true,
      ".write": false
    }
  }
}